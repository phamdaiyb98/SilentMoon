<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMeditateTopicItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <!--    bắt sự kiện click của viewGroup cần cho clickable của tất cả view child là false-->

    <ImageButton
        android:id="@+id/imageButtonMeditateTopicItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/radius18"
        android:backgroundTint="@color/item_active"
        android:clickable="false"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/meditate_v2_all_category" />

    <!--    #A0A3B1: color inactive -->
    <TextView
        android:id="@+id/textViewMeditateTopicNameItem"
        style="@style/fontMedium_bold_16_center_3f344e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:clickable="false"
        android:text="All" />
</LinearLayout>