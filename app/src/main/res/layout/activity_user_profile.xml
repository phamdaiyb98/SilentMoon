<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".views.UserProfileActivity">

    <ImageView
        android:id="@+id/imageViewProfile_UserProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_user" />

    <EditText
        android:id="@+id/editTextYourName_UserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewProfile_UserProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:fontFamily="@font/helvetica_neue_bold"
        android:text="@string/group"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextLoginEmail_UserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextYourName_UserProfile"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:fontFamily="@font/garamond_premier_pro"
        android:text="imshuvo97@gmail.com"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/llDivider1_UserProfile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/editTextLoginEmail_UserProfile"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/rlLogout_UserProfile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/llDivider1_UserProfile">

        <ImageView
            android:id="@+id/imageViewLogout_UserProfile"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageViewLogout_UserProfile"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="@string/logout"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlLogout_UserProfile"
        android:background="@color/user_profile_divider_color" />

</RelativeLayout>